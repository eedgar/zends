# Generated by Chef for <%= node['hostname'] %>.
# Local modifications will be overwritten.

# Grant replication for a slave user.

# Set the server root password. This should be preseeded by the package installation.
<% if node['zends']['allow_remote_root'] -%>
GRANT ALL ON *.* TO 'root'@'%' IDENTIFIED BY '<%= node['zends']['server_root_password'] %>' WITH GRANT OPTION;
<% end -%>
SET PASSWORD FOR 'root'@'localhost' = PASSWORD('<%= node['zends']['server_root_password'] %>');
